<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='view_staff_tree' model='ir.ui.view'>
        <field name='name'>uni.staff.tree</field>
        <field name='model'>uni.staff</field>
        <field name='arch' type='xml'>
            <tree>
                <field name='name'/>
            </tree>
        </field>
    </record>

        <record id='view_staff_form' model='ir.ui.view'>
        <field name='name'>uni.staff.form</field>
        <field name='model'>uni.staff</field>
        <field name='arch' type='xml'>
            <form>
                <header>
                    <button string='Error Raise' type='object' name='test_user_error' class='btn btn-danger'/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name='name'/>
                            <field name='department_ids' widget='many2many_tags'/>
                            <field name='salary'/>
                        </group>
                        <group>
                            <field name='photo' widget='image' class='oe_avatar'/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>